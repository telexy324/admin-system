generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户模型
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联
  roles     Role[]   @relation("UserToRole")
  logs      Log[]

  @@map("users")
}

// 角色模型
model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联
  users       User[]   @relation("UserToRole")
  permissions Permission[] @relation("RoleToPermission")
  menus       Menu[]   @relation("RoleToMenu")

  @@map("roles")
}

// 权限模型
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  code        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联
  roles       Role[]   @relation("RoleToPermission")

  @@map("permissions")
}

// 菜单模型
model Menu {
  id          String   @id @default(cuid())
  name        String
  path        String
  icon        String?
  parentId    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联
  parent      Menu?    @relation("MenuToSubMenu", fields: [parentId], references: [id])
  children    Menu[]   @relation("MenuToSubMenu")
  roles       Role[]   @relation("RoleToMenu")

  @@map("menus")
}

// 系统日志模型
model Log {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   Json?
  ip        String?
  createdAt DateTime @default(now())

  // 关联
  user      User     @relation(fields: [userId], references: [id])

  @@map("logs")
}
